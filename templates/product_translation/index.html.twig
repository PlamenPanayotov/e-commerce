{% extends 'base.html.twig' %}

{% block title %}ProductTranslation index{% endblock %}

{% block body %}
    <h1>ProductTranslation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>MetaKeywords</th>
                <th>MetaDescription</th>
                <th>ShortDescription</th>
                <th>Locale</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_translation in product_translations %}
            <tr>
                <td>{{ product_translation.id }}</td>
                <td>{{ product_translation.name }}</td>
                <td>{{ product_translation.description }}</td>
                <td>{{ product_translation.metaKeywords }}</td>
                <td>{{ product_translation.metaDescription }}</td>
                <td>{{ product_translation.shortDescription }}</td>
                <td>{{ product_translation.locale }}</td>
                <td>
                    <a href="{{ path('product_translation_show', {'id': product_translation.id}) }}">show</a>
                    <a href="{{ path('product_translation_edit', {'id': product_translation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_translation_new') }}">Create new</a>
{% endblock %}
