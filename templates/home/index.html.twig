      </div> #}
      <li class="nav-item">
        <a href="{{ path('user_profile') }}">
          {% trans %}user.profile{% endtrans %}
        </a>
      </li>
      <li>
        <a href="{{ path('app_logout') }}">
          {% trans %}user.logout{% endtrans %}
        </a>
      </li>
    {% else %}
      <li class="nav-item">
        <a href="{{ path('app_register') }}">
          {% trans %}user.register{% endtrans %}
        </a>
      </li>
      <li>
        <a href="{{ path('app_login') }}">
          {% trans %}user.login{% endtrans %}
        </a>
      </li>
    {% endif %}This friendly message is coming from:<ul>
