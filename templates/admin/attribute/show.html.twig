{% extends 'base.html.twig' %}

{% block title %}Attribute{% endblock %}

{% block body %}
    <h1>Attribute</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attribute.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ attribute.name }}</td>
            </tr>
        </tbody>
    </table>
    {% for product in attribute.products %}
        {{ product.name }}
    {% endfor %}
    <a href="{{ path('attribute_index') }}">back to list</a>

    <a href="{{ path('attribute_edit', {'id': attribute.id}) }}">edit</a>

    {{ include('admin/attribute/_delete_form.html.twig') }}
{% endblock %}
