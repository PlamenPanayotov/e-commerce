{% extends '/admin/index.html.twig' %}
{% block title %}
  Products
{% endblock %}

{% block content %}
<!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">{% trans %}product.products{% endtrans %}</h1>
          
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  {% trans %}product.add{% endtrans %} <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-square-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
</svg>
</button>
{% include '/admin/modals/add_product.html.twig' %}

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
            
              <h6 class="m-0 font-weight-bold text-primary">{% trans %}product.all{% endtrans %}</h6>
              
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Price</th>
                      <th>Category</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Price</th>
                      <th>Category</th>
                      <th>Actions</th>
                    </tr>
                  </tfoot>
                  <tbody>
                  {% for product in products %}
                    <tr>
                      <td>{{ product.product.id }}</td>
                      <td>{{ product.description }}</td>
                      <td>{{ product.product.price }}</td>
                      <td>{{ product.product.category.name }}</td>
                       <td>
                    <a href="{{ path('product_show', {'id': product.product.id}) }}">{% trans %}product.show{% endtrans %}</a>
                    <a href="{{ path('product_edit', {'id': product.product.id}) }}">{% trans %}product.edit{% endtrans %}</a>
                </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->
{% endblock %}
