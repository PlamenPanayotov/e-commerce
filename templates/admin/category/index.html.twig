{% extends '/admin/index.html.twig' %}
{% block title %}
	Categories
{% endblock %}

{% block content %}

<!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">{% trans %}admin.categories.categories{% endtrans %}</h1>
                    <a href="{{ path('category_new')}}" class="btn btn-info">
			              {% trans %}admin.categories.add{% endtrans %}
			              <svg width="1em" height="1em" viewbox="0 0 16 16" class="bi bi-plus-square-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
				              <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
			              </svg>
		                </a>
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">{% trans %}admin.categories.all{% endtrans %}</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Row</th>
                                            <th>Name</th>
                                            <th>Parent</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Row</th>
                                            <th>Name</th>
                                            <th>Parent</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                      {% for category in categories %}
                                        <tr>
                                            <td>{{ category.row }}</td>
                                            <td>{{category.name}}</td>
                                            {% if category.parent %}
                                              <td>{{ category.parent }}</td>
                                            {% else %}
                                            <td>No parent</td>
                                            {% endif %}
                                        </tr>
                                      {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->


{% endblock %}
