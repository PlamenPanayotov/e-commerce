{% extends '/admin/index.html.twig' %}

{% block title %}New Navigation{% endblock %}

{% block content %}
    <h1>Create new Navigation</h1>

    {{ include('admin/navigation/_form.html.twig') }}

    <a href="{{ path('navigation_index') }}">back to list</a>
        <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sequence</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.sequence }}</td>
                <td>{{ category.category.name }}</td>
                <td>
                    <a href="{{ path('navigation_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('navigation_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
