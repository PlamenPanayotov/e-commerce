{% extends 'base.html.twig' %}

{% block title %}
  OptionGroup
{% endblock %}

{% block body %}
  <h1>
    OptionGroup
  </h1>

  <table class="table">
    <thead>
      <tr>
        <th>
          Id
        </th>
        <th>
          Name
        </th>
      </tr>
    </thead>
    <tbody>
      {% for option in options %}
        <tr>
          <td>
            {{ option_group.id }}
          </td>
          <td>
            {{ option.name }}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="3">
            no records found
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <a href="{{ path('option_group_index') }}">back to list</a>

  <a href="{{
    path(
      'option_group_edit',
      {
        id: option_group.id
      }
    )
    }}">
    edit
  </a>

  {{ include('/admin/option_group/_delete_form.html.twig') }}
{% endblock %}
